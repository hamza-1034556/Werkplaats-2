{% extends '/base.html.jinja' %}
{% block main %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Export questions</title>
    <link rel="stylesheet" href="../../static/questions_pages_static/export_question_style.css"/>
</head>

<body>
    <h1>Exporteer een toetsvraag</h1>
    <form action="/export" method="POST">
        <label for="questions">Selecteer hier:</label>
        <select id="questions" name="question_id" required>
            {% for question in questions %}
                <option value="{{ question['questions_id'] }}">{{ question['question'] }}</option>
            {% endfor %}
        </select>
        <button type="submit">Exporteer naar JSON</button>
    </form>
</body>
</html>

{% endblock %}